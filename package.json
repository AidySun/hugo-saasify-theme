  },
  "keywords": [
    "hugo",
    "theme",
    "saas",
    "tailwind"
  ],
  "author": "Chaoming Li",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5"
  }
}
